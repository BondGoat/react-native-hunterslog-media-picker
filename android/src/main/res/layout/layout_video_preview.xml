<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/footer">

        <VideoView
            android:id="@+id/videoPreview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:scaleType="fitCenter" />


        <ImageButton
            android:id="@+id/btnPlayVideo"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerInParent="true"
            android:background="@drawable/ico_play_video" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:padding="10dp"
        android:background="@color/bg_hunterslog_footer">

        <Button
            android:id="@+id/btnBack"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:background="@drawable/btn_back_preview_selector"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"/>

        <Button
            android:id="@+id/btnUse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="@string/txt_use"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:background="@drawable/btn_use_preview_selector"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

</RelativeLayout>